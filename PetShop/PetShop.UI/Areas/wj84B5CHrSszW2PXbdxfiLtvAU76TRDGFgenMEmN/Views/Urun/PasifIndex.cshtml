
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<PetShop.UI.Models.Urun>

<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Urun/UrunEkle/" class="btn btn-default">
                        Yeni Ürün <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Urun/Index/" class="btn btn-default">
                        Aktif Ürünler <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space17"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>ADI</th>
                        <th>ACIKLAMA</th>
                        <th>ALIS FIYATI</th>
                        <th>SATIS FIYATI</th>
                        <th>EKLENME TARIHI</th>
                        <th>SON KULLANMA TARIHI</th>
                        <th>Anasayfa</th>
                        <th>Pasif</th>
                        <th>KATEGORI</th>
                        <th>MARKA</th>
                        <th>Urun Resim Ekle</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (var urn in Model)
                    {
                        <tr class="">
                            <td>@urn.Id</td>
                            <td>@urn.Adi</td>
                            <td>@urn.Aciklama</td>
                            <td>@urn.AlisFiyati</td>
                            <td>@urn.SatisFiyati</td>
                            <td>@urn.EklenmeTarihi</td>
                            <td>@urn.SonKullanmaTarihi</td>
                            <td>@urn.Anasayfa</td>
                            <td>@urn.Pasif</td>
                            <td>@urn.Kategori.Adi</td>
                            <td>@urn.MarkaID</td>

                            <td>
                                <a class="fancybox-" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Urun/UrunResimEkle/@urn.Id">
                                    <i class="icon-add"></i>Resim Ekle
                                </a>
                            </td>
                            <td>
                                <a class="edit" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Urun/Guncelle/@urn.Id">
                                    <i class="icon-pencil"></i>Güncelle
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Urun/Sil/@urn.Id">
                                    <i class="icon-trash"></i>Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

