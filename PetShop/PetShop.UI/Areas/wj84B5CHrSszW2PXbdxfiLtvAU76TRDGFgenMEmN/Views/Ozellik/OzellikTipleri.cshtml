
@{
    ViewBag.Title = "Ozellik Tipleri";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<PetShop.UI.Models.OzellikTip>

<section class="panel">
    <header class="panel-heading">
        Özellik Tipleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/OzellikTipEkle/" class="btn btn-default">
                        Yeni Özellik Tip Ekle <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Özellik Tip Adı</th>
                        <th>ACIKLAMA</th>
                        <th>Kategori</th>
                        <th>GUNCELLE</th>
                        <th>SIL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tip in Model)
                    {
                        <tr class="">
                            <td>@tip.Adi</td>
                            <td>@tip.Aciklama</td>
                            @if (tip.Kategori != null)
                            {
                                <td>@tip.Kategori.Adi</td>
                            }
                            <td>
                                <a class="edit" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/OzellikTipGuncelle/@tip.Id">
                                    <i class="icon-pencil"></i>Güncelle
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/OzellikTipSil/@tip.Id">
                                    <i class="icon-trash"></i>Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

