
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<PetShop.UI.Models.Kategori>

<section class="panel">
    <header class="panel-heading">
        Kategoriler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Kategori/KategoriEkle/" class="btn btn-default">
                        Yeni Kategori <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>ADI</th>
                        <th>ACIKLAMA</th>
                        <th>GUNCELLE</th>
                        <th>SIL</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ktgr in Model)
                    {
                        <tr class="">
                            <td>@ktgr.Adi</td>
                            <td>@ktgr.Aciklama</td>
                            <td>
                                <a class="edit" href="/Kategori/Guncelle/@ktgr.Id">
                                    <i class="icon-pencil"></i>Güncelle
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Kategori/Sil/@ktgr.Id">
                                    <i class="icon-trash"></i>Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

