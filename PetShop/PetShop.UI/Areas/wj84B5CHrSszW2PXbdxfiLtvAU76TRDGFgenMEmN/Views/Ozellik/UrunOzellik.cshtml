
@{
    ViewBag.Title = "Urun Ozellik";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model IEnumerable<PetShop.UI.Models.UrunOzellik>

<section class="panel">
    <header class="panel-heading">
        Ürün Özellikleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/UrunOzellikEkle/" class="btn btn-default">
                        Yeni Ürün Özellik Ekle <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Özellik Tip Adı</th>
                        <th>Özellik Değer Adı</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ozellik in Model)
                    {
                        <tr class="">
                            @if (ozellik.Urun != null)
                            {
                                <td>@ozellik.Urun.Adi</td>
                            }
                            @if (ozellik.OzellikTip != null)
                            {
                                <td>@ozellik.OzellikTip.Adi</td>
                            }
                            @if (ozellik.OzellikDeger != null)
                            {
                                <td>@ozellik.OzellikDeger.Adi</td>
                            }
                            <td>
                                <a class="edit" href="#">
                                    <i class="icon-pencil"></i>Güncelle
                                </a>
                            </td>
                            @if (ozellik.Urun != null && ozellik.OzellikTip != null && ozellik.OzellikDeger != null)
                            {
                                <td>
                                    <a class="delete" href='@Url.Action("UrunOzellikSil", "Admin", new { urunId = ozellik.UrunID, tipId = ozellik.OzellikTipID, degerId = @ozellik.OzellikDegerID })'>
                                        <i class="icon-trash"></i>Sil
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

