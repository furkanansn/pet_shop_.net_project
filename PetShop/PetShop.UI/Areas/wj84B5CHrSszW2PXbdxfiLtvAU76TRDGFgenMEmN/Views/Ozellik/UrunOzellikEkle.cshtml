@{
    ViewBag.Title = "Urun Ozellik Ekle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <script src="~/Content/Admin/js/jquery-1.8.3.min.js"></script>
    <script>
        $(document).ready(function myfunction() {
            $("#urun").change(function myfunction() {
                //var id = $(this).val();
                //var kId = id.split('-')[1];
                var kId = $(this).find("option:selected").attr("title");
                $.ajax({
                    type: "GET",
                    url: "/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/UrunOzellikTipWidget",
                    data: { katId: kId },
                    success: function myfunction(veri) {
                        $("#tip").html('');
                        $("#tip").append(veri);
                    },
                    error: function myfunction() {
                        alert("hata");
                    }
                });
            })

            $("#tip .form-group ").change(function myfunction() {
                var id = $(this).val();
                alert(id);
            });
        });
    </script>
}

@model IEnumerable<PetShop.UI.Models.Urun>

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br />
            <header class="panel-heading">
                Ürün Özellik Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Ozellik/UrunOzellikEkle/" enctype="multipart/form-data" method="post" class="form-horizontal tasi-form">
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Ürün:</label>
                        <br />
                        <br />
                        <div class="col-lg-10">
                            <select id="urun" class="form-control m-bot15" name="UrunID">
                                @foreach (var urun in Model)
                                {
                                    <option value="@urun.Id" title="@urun.KategoriID">@urun.Adi</option>
                                }
                            </select>
                        </div>
                    </div>
                    <div id="tip">

                    </div>
                    <div id="deger">

                    </div>
                    @*@{
                            Html.RenderAction("UrunOzellikTipWidget", "Ozellik");
                            Html.RenderAction("UrunOzellikDegerWidget", "Ozellik");
                        }*@


                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>



