<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <br />
            <header class="panel-heading">
                Marka Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Marka/MarkaEkle/" enctype="multipart/form-data" method="post" class="form-horizontal tasi-form">
                    <div class="form-group has-success">
