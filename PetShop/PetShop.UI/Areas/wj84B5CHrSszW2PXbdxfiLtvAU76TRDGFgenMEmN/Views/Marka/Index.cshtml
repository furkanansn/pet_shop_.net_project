
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@section head{
    <link href="/Content/Admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />
}

@model IEnumerable<PetShop.UI.Models.Marka>

<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Marka/MarkaEkle/" class="btn btn-default">
                        Marka Ekle <i class="icon-plus"></i>
                    </a>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>ADI</th>
                        <th>ACIKLAMA</th>
                        <th>RESIMID</th>
                        <th>SIL</th>
                        <th>GUNCELLE</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var mrk in Model)
                    {
                        <tr class="">
                            <td>@mrk.Adi</td>
                            <td>@mrk.Aciklama</td>
                            <td>
                                @if (mrk.Resim != null)
                                {
                                    <a class="fancybox" href="@mrk.Resim.OrtaYol">
                                        <i class="icon-eye-open"></i>
                                    </a>

                                }
                            </td>
                            <td>
                                <a class="edit" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Marka/GUNCELLE/@mrk.Id">
                                    <i class="icon-pencil"></i>Güncelle
                                </a>
                            </td>
                            <td>
                                <a class="delete" href="/wj84B5CHrSszW2PXbdxfiLtvAU76TRDGFgenMEmN/Marka/SIL/@mrk.Id">
                                    <i class="icon-trash"></i>Sil
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="/Content/Admin/assets/fancybox/source/jquery.fancybox.js"></script>
<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });
</script>